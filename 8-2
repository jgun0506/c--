#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <assert.h>

int text_size(char* txt) {//txt의 배열크기구하기
	int size = 0;
	while (*(txt + size) != '\0')
		size++;
	return size;
}

int count_words(char* txt) {
	int size = text_size(txt);
	char* txt1 = malloc(sizeof(char) * size);
	strcpy(txt1, txt);

	char* ptr = strtok(txt1, " \n\r");
	
	int count = 0;
	while (ptr != NULL) {
		count++;
		ptr = strtok(NULL, " \n\r");
	}

	return count;
}

int main(void) {
	char* filename = "ai.txt";
	FILE* fd = NULL;
	int test_case = 1;

	scanf("%d", &test_case);

	switch (test_case) {
	case 2:
		filename = "internet.txt";
		break;
	case 3:
		filename = "ce.txt";
		break;
	default:
		break;
	}

	fd = fopen(filename, "rt");
	if (fd) {
		int nsize;
		char* buffer = NULL;

		fseek(fd, 0, SEEK_END);//파일포인터를 끝까지 이동시킴
		nsize = ftell(fd);//파인포인터의 현재위치
		rewind(fd);

		buffer = (char*)malloc(nsize + 1);
		assert(buffer);

		nsize = fread(buffer, sizeof(char), nsize, fd);
		buffer[nsize] = '\0';
		printf("# of words in %s is %d\n", filename, count_words(buffer));
		fclose(fd);
	}
	else puts("File Open Error\n");

	return 0;
}
