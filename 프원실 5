#include <stdio.h>
int main() {
	
	int n, direction;
	scanf("%d %d", &n, &direction);
	
	int m=1;
	
	if (direction==1){
		for (int i=n;i>0;i--){
			for (int j=i-1;j>0;j--){//코드 최대한 간단하게 짜보기
				printf(" ");
			}
			for (int k=1;k<=m;k++){
				printf("*");
			}
			m++;
			printf("\n");
		}
	}
	
	
	return 0;
}	
