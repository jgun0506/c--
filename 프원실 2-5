#include <stdio.h>
int main() {
	
	int n, option;
	scanf("%d %d", &n, &option);
	
	if(option==1){
		for(int i=0;i<n;i++){
			for(int j=n-1-i;j>0;j--){
				printf(" ");
			}
			for(int j=1+i;j>0;j--){
				printf("*");
			}
			printf("\n");
		}
	}
	else if(option==2){
		for(int i=0;i<n;i++){
			for(int j=i;j>0;j--){
				printf(" ");
			}
			for(int j=n-i;j>0;j--){
				printf("*");
			}
			printf("\n");
		}
	}
	
	
}	
