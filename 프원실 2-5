#include <stdio.h>
int main() {
	
	int n, direction;
	scanf("%d %d", &n, &direction);
	
	if(n==1){
		for(int i=0;i<direction;i++){
			for(int j=direction-i;j>1;j--){
				printf(" ");
			}
			for(int j=0;j<i+1;j++){
				printf("*");
			}
			printf("\n");
		}
	}
	else if(n==2){
		for(int i=0;i<direction;i++){
			for(int j=0;j<i;j++){
				printf(" ");
			}
			for(int j=direction-i;j>0;j--){
				printf("*");
			}
			printf("\n");
		}
	}
	
	return 0;
}	
