#include <stdio.h>
#include <stdlib.h>
#include <signal.h>
#include <string.h>
#include <limits.h>
#include <stdint.h>

// Fix issues related to pointer operations

double calculateAverage(int *values, size_t count) {
	double sum = 0;
	for (size_t i = 0; i < count; i++) {
			sum += values[i];
	}
	return sum / count;
}

void updateTemperature(float *temp) {
	if(temp != NULL)
		*temp = 25.0; 
}

int* allocateMemory(size_t size) {
	if(size==0){
		return NULL;
	}
	
	int *ptr = malloc(size * sizeof(int));
	
	if(!ptr){
		return NULL;
	}
	
	if(ptr){
		for(int i=0; i<size;++i)
		ptr[i] = 0;
	}
	
	return ptr;
}

void reverseString(char *str) {//여기 모르겟다
	size_t len = strlen(str);
	for (size_t i = 0; i < len / 2; i++) {
			char temp = str[i];
			str[i] = str[len - i - 1];
			str[len - i - 1] = temp;
	}
}

